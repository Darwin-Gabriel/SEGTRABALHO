<!-- res/layout/activity_photo.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/photo" />

    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/take_photo" />

    <Button
        android:id="@+id/button_use_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_take_photo"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/use_photo" />

    <Button
        android:id="@+id/button_retake_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_use_photo"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/retake_photo" />

</RelativeLayout>